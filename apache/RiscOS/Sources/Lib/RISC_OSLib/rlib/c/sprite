  setfromtag(53, area, spr, &r);
  r.r[3] = x;
  r.r[4] = y;
  r.r[5] = 0;                   /* doesn't support mask or gcol action */
  r.r[6] = (int) factors;
  r.r[7] = (int) pixtrans;
  result = sprite__op(&r);
  return result;
}
#endif

