  os_error *e;

  r.r[0] = entry.word;
  r.r[1] = dest_mode;
  r.r[2] = (int)dest_palette;

  e = os_swix(ColourTrans_ReturnGCOLForMode, &r);

  if (e == 0)
    *gcol = r.r[0];

  return(e);
}


