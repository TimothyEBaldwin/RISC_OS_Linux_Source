#define MUNGE_PIXEL(x, y, c, gcol, sa, sp, sb) \
  { if (toolwindow_current_mode != 0 || gcol.ecf) \
      domungepixel (x, y, c, gcol, sa, sp, sb); \
  }

static void Set_Marked_Extent (main_sprite *);

