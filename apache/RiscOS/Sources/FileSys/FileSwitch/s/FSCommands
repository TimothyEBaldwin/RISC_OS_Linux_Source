        MOV     r4, #FSControl_Rename
;;;        MOV     r3, #-1
        B       %BT10

; .............................................................................

Shut_Code ALTENTRY

        MOV     r4, #FSControl_Shut
        B       %BT30

ShutDown_Code ALTENTRY

        MOV     r4, #FSControl_ShutDown
        B       %BT30

