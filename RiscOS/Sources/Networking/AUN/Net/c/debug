#include <stdarg.h>

#include "kernel.h"
#include "swis.h"

#include "debug.h"


#ifdef DEBUG

/******************************************************************************/

#define HostFS_WriteC 0x40102
#define HostFS_Write0 0x40104

void hprintf(const char * format, ...)
{
   va_list ap;
   static char buf[256];
   char *p=buf;

   va_start(ap, format);
   vsprintf(buf, format, ap);
   va_end(ap);

#if 0
   _swix(HostFS_Write0, _IN(0), buf);
#else
   while (*p)
    _swix(HostFS_WriteC, _IN(0), *p++);
#endif

   return;

} /* hprintf() */

/******************************************************************************/

#endif

/* EOF debug.c */
