#include "sys/types.h"
#include "netinet/in.h"

#include "inetfn.h"


/*
 * Return the netmask pertaining to an internet address.
 */
u_long inet_maskof(u_long inaddr)
{
	register u_long i = ntohl(inaddr);
	register u_long mask;

        /* All hard-wired in AUN! */
	if (i == 0)
		mask = 0;
	else
		mask = IN_CLASSB_NET;

	return (htonl(mask));
}


