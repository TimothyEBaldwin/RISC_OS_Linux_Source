        GET     Hdr:ListOpts
        GET     Hdr:Macros
        GET     Hdr:System
        GET     Hdr:ModHand
        GET     Hdr:NdrDebug
        GET     Hdr:Services
        GET     Hdr:Tokens
        GET     Hdr:Proc
        GET     Hdr:Symbols
        GET     Hdr:ResourceFS
        GET     Hdr:MsgTrans
        GET     Hdr:FSNumbers
        GET     Hdr:HighFSI
        GET     Hdr:NewErrors
        GET     Hdr:VFPSupport
        GET     Hdr:Debugger

        GET     VersionASM

  [ :LNOT::DEF:standalone
        GBLL    standalone
  ]

debug   SETL    {FALSE}

        GBLL    debugx ; Debug support code 
debugx  SETL    debug :LAND: {TRUE}


; How many D registers we support
        GBLA    MaxDRegs
      [ SupportARMV32
MaxDRegs SETA   32
      |
MaxDRegs SETA   16
      ]

        GET     Structures.s

        GET     Macros.s

        GET     Module.s

        ARM     ; Use UAL syntax
        GET     CMath.s
        CODE32  ; Back to pre-UAL

      [ SupportCode
        GET     hdr.shared
        GET     SupportCode.s
        GET     CSupport.s
      ]

        GET     Errors.s
        GET     MsgCode.s

        InsertNDRDebugRoutines

        END
