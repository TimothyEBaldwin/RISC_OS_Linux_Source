; > Sources.GetAll

;---------------------------------------------------------------------------
;       Portable support code
;---------------------------------------------------------------------------

;Module_BaseAddr

;---------------------------------------------------------------------------
;       Get the headers.
;
        GET     Hdr:ListOpts
        GET     Hdr:Macros
        GET     Hdr:System
        GET     Hdr:Machine.<Machine>
        $GetIO
        GET     Hdr:KEYV
        GET     Hdr:ModHand
        GET     Hdr:Services
        GET     Hdr:FSNumbers
        GET     Hdr:CMOS
        GET     Hdr:HighFSI
        GET     Hdr:NewErrors
        GET     Hdr:MsgTrans
        GET     Hdr:Proc
        GET     Hdr:PaletteV
        GET     Hdr:Portable
        GET     Hdr:ADFS
        GET     Hdr:Variables
        GET     Hdr:ScrBlank
        GET     Hdr:PublicWS
        GET     Hdr:Sound
        GET     Hdr:Debug
        GET     Hdr:DevNos
        GET     Hdr:IIC
        GET     Hdr:Messages

        OPT     OptList+OptNoMacros

        GET     VersionASM

;---------------------------------------------------------------------------
;       Define global variables.
;
        GBLL    T
        GBLL    true
        GBLL    F
        GBLL    false

T       SETL    {TRUE}
F       SETL    {FALSE}
true    SETL    {TRUE}
false   SETL    {FALSE}


        GBLL    Debug
Debug           SETL    false   ;true

        GBLL    OnMorris                        ;When true, assembles Idle & Stop code for Morris
OnMorris        SETL    true

        GBLL    SwitchPower
SwitchPower     SETL    true

        GBLL    ConfigCombo
ConfigCombo     SETL    true

        GBLL    TurnOffOscillator
TurnOffOscillator SETL  false

        GBLL    HWPolling                       ;When true, use a ticker to check for docking
HWPolling       SETL    true                    ; station presence.

        GBLL    SwindellCode
SwindellCode    SETL    false


;---------------------------------------------------------------------------
;       Get the sources.
;
        GET     s.Front
        GET     s.Macros
        GET     s.StPortable    ;Module header and misc. functions.
        GET     s.PowerCtrl     ;Power switching.
        GET     s.HotKeys
        GET     s.MicroCtrl     ;Communications with battery-manager/keyboard controller.
        GET     s.LCDcontrol    ;LCD brightness and contrast control.
        GET     s.StateMC       ;State machine to handle docking station.


        END
