os_error * wimp_taskclose(wimp_t t)
{
  os_regset r;
  os_error *e;

  r.r[0] = t;
  r.r[1] = 'T' +
          ('A' << 8) +
          ('S' << 16) +
          ('K' << 24);
    e = os_swix(CloseDown, &r);
    return e;
}

