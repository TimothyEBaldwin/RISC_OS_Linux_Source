os_error *font_converttoos(int x_inch, int y_inch, int *x_os,
                           int *y_os)
{
    os_regset r;
    os_error *e;

    r.r[1] = x_inch;
    r.r[2] = y_inch;

    e = os_swix(ConverttoOS, &r);

    *x_os = r.r[1];
    *y_os = r.r[2];

    return e;
}

