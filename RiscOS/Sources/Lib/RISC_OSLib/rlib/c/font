os_error *font_setfont(font f)
{
    os_regset r;
    os_error *e;

    r.r[0] = f;

    e = os_swix(SetFont, &r);

    return(e);
}

#ifndef UROM
os_error *font_current(font_state *f)
{
    os_regset r;
    os_error *e;

    e = os_swix(CurrentFont, &r);

    f->f = r.r[0];
    f->back_colour = r.r[1];
    f->fore_colour = r.r[2];
    f->offset = r.r[3];

    return(e);
}
#endif

