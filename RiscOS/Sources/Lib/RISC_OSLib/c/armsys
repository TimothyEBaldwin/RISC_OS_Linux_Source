#define str(x)  #x
#define xstr(x) str(x)
const char *_clib_version(void)
{
    return LIB_SHARED "C Library vsn " xstr(Module_Version) "/"
    #ifdef __APCS_32
           "32"
    #else
           "R"
    #endif
           " [" __DATE__ "]\n";
}
