#include "errno.h"
#include "kernel.h"
#include "swis.h"

#include "unixlib.h"

int chmod(const char *path, unsigned short mode)
{
    _kernel_osfile_block osf;
    int type;

    type = _kernel_osfile(17, path, &osf);

    if( type == 0 || type == _kernel_ERROR )
    {
	errno = ENOENT;
	return (-1);
    }

    if( mode & 0200 )
	osf.end |= 0x02;
    else
	osf.end &= ~0x02;

    if( mode & 0400 )
	osf.end |= 0x01;
    else
	osf.end &= ~0x01;

    _kernel_osfile(4, path, &osf);

    errno = 0;
    return(0);
}

/* EOF chmod.c */
