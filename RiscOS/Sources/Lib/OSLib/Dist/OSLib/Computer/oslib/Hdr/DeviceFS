        [       :LNOT: :DEF: DeviceFS_Hdr
        GBLS    DeviceFS_Hdr

        [       :LNOT: :DEF: Get_Types
        GBLS    Get_Types
        ]
        [       :LNOT: :DEF: Types_Hdr
Get_Types                       SETS    "GET oslib/Types.Hdr"
        |
Get_Types                       SETS    ""
        ]
        $Get_Types

        [       :LNOT: :DEF: Get_OS
        GBLS    Get_OS
        ]
        [       :LNOT: :DEF: OS_Hdr
Get_OS                          SETS    "GET oslib/OS.Hdr"
        |
Get_OS                          SETS    ""
        ]
        $Get_OS

        [       :LNOT: :DEF: Get_OSArgs
        GBLS    Get_OSArgs
        ]
        [       :LNOT: :DEF: OSArgs_Hdr
Get_OSArgs                      SETS    "GET oslib/OSArgs.Hdr"
        |
Get_OSArgs                      SETS    ""
        ]
        $Get_OSArgs

        [       :LNOT: :DEF: Get_Buffer
        GBLS    Get_Buffer
        ]
        [       :LNOT: :DEF: Buffer_Hdr
Get_Buffer                      SETS    "GET oslib/Buffer.Hdr"
        |
Get_Buffer                      SETS    ""
        ]
        $Get_Buffer

