        GBLL    __HAL_AHCIDevice_HDR__
; Define a HAL device to let the HAL pass addresses to modules
        GET     Hdr:HALDevice
                                ^       0
HALDevice_AHCI                  #       HALDeviceSize
HALDevice_AHCIClock             #       4
