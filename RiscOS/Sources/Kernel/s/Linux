DynArea_AlterFile
        Push    "r2, r6-r8, lr"
        BL      QCheckAreaNumber        ; check area exists
        BCC     UnknownDyn              ; [it doesn't]
        MOV     r3, r10
        BL      do_DynArea_AlterFile
        Pull    "r2, r6-r8, pc"

DynArea_AplSpaceLimit
        Push    "r2, r3, lr"
        BL      do_DynArea_AplSpaceLimit
        CMP     r0, #DAReason_AplSpaceLimit
        Pull    "r2, r3, pc", EQ
 [ International
        BL      TranslateError
 |
        SETV
 ]
        Pull    "r2, r3, pc"


PageShifts
        =       12, 13, 0, 14           ; 1 2 3 4
        =       0,  0,  0, 15           ; 5 6 7 8

        GBLL    DebugAborts
DebugAborts SETL {FALSE}

AMBControlSWI
        Push    "r4, ip, lr"
        BL      do_AMBControlSWI
        Pull    "r4, ip, lr"
        BIC     lr, lr, #V_bit
        B       SLVK

LinuxReadTime
        Push    "r1, r3, r7, lr"
        SUB     sp, sp, #8
        MOV     r7, #__NR_gettimeofday
        MOV     r0, sp
        MOV     r1, #0
        BL      __PVirt_LinuxSyscall

        LDR     r3, =-776530087
        LDR     r0, [sp, #4]
        MOV     r2, #0
        UMULL   r1, r0, r3, r0
        MOV     r3, #100
        LDR     r7, [sp], #8
        MOV     r0, r0, lsr #13
        UMLAL   r0, r2, r3, r7
        LDR     r1, =&6E996A00
        ADDS    r0, r0, r1
        ADC     r2, r2, #&33
        Pull    "r1, r3, r7, pc"

        END
