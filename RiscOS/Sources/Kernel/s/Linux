NullOp
        MOV     pc, lr

DAbPreVeneer
        SUB     sp, sp, #4
        Push    "r0-r3, lr"
        MOV     r1, lr
        BL      __PVirt_GetVCPU
        LDR     r2, [r0, #vcpu_spsr_abt]
        LDR     r3, [r0, #vcpu_DFAR]
        LDR     r0, =ZeroPage + Abort32_dumparea
        STMIA   r0, {r1, r2, r3}
        LDR     r1, [r0, #DAbHan - Abort32_dumparea]
        STR     r1, [sp, #5 * 4]
        Pull    "r0-r3, lr"
        Pull    "pc"


        IMPORT  Init_MapInRAM_Linux
