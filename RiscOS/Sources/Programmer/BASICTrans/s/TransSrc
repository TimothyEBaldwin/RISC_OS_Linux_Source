BASICTrans_Error
        CLRPSR  I_bit,R11
        CMP     R0,#(ERRBASE-ERRTABLE):SHR:1
        BHS     UnknownSWI
        Push    "lr"
        MOV     r2, r1
        ADR     r1,ERRTABLE
      [ NoARMv4
        TST     R0,#1
        BIC     R0,R0,#1
        LDR     R1,[R1,R0,LSL #1]
        MOVEQ   R1,R1,LSL #16
        MOV     R1,R1,LSR #16
      |
        MOV     R0,R0,LSL #1
        LDRH    R1,[R1,R0]
      ]
        ADR     R3,ERRBASE
        ADD     R1,R1,R3
        LDR     r0, [r12]
        MOV     r3, #252
        SWI     XMessageTrans_Lookup
        Pull    "pc"

