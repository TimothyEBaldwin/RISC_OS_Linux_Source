        |
IOMD_C_FrontPanelButton	SETA	0
        ]

; SCART Control bit 1
		GBLA	IOMD_C_MPEG_CTRL_1
        [ M_STB3 :LOR: M_STB400
IOMD_C_MPEG_CTRL_1	SETA	(1<<6)
        |
