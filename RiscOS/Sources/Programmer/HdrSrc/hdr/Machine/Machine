              [ M_STB400
MPEGPoduleType  SETS    "MPEG2cCard"
              |
MPEGPoduleType	SETS	"Unknown..."	; Unknown MPEG Podule type
              ]
	    ]
	  ]
	]

; VIDC Clock sources
		GBLS	VIDCClockSource
        [ M_Falcon :LOR: M_Morris :LOR: M_Phoebe :LOR: M_Omega :LOR: M_Peregrine :LOR: M_STB3 :LOR: M_32
