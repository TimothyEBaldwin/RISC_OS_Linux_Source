REM Random Test
*TestLog Testing CryptRandom...
*RMEnsure CryptRandom 0.13 RMLoad <Test$Dir>.CryptRand
REM Just checks to see if data returned.

FOR I%=0 TO 255
  REPEAT
    SYS "CryptRandom_Byte" TO V%
    IF V% AND &FFFFFF00 THEN STOP
  UNTIL V%=I%
NEXT

FOR J%=0 TO 24 STEP 2
  FOR I%=0 TO 200 STEP 20
    REPEAT:SYS "CryptRandom_Word" TO V%:UNTIL ((V%>>J%) AND &FF)=I%
  NEXT
NEXT

DIM B% 256

FOR S%=16 TO 32
  FOR L%=1 TO 16
    REPEAT
      M%=TRUE
      FOR I%=0 TO 255
        B%?I%=I%
      NEXT
      SYS "CryptRandom_Block", B%+S%, L%
      FOR I%=0 TO S%-1
        IF B%?I%<>I% THEN STOP
      NEXT
      IF L% > 0 THEN
        FOR I%=S% TO S%+L%-1
          IF B%?I%=I% THEN M%=FALSE
        NEXT
      ENDIF
      FOR I%=S%+L% TO 255
        IF B%?I%<>I% THEN STOP
      NEXT
    UNTIL M%
  NEXT
NEXT

SYS "Wimp_CommandWindow",-1

