REM Test Transient register presevation

DIM P% 1024
regs% =P%:P%+=16*4
regs2%=P%:P%+=16*4
[opt 2

.save_sp% dcd 0

.test%
str lr, [sp, #-4]!
str sp, save_sp%

adr lr, regs%
ldmia lr!, {r0-r12}
ldr sp, [lr], #4
ldr lr, [lr]
swi "OS_FSControl"
str lr, regs2%+4*14
str sp, regs2%+4*13
adr lr, regs2%
stmia lr, {r0-r12}

ldr sp, save_sp%
ldr pc, [sp], #4

.filename%
dcb "RAM:$.TTest"
dcb 0

.transient%
swi &100 + ASC(".")
swi "OS_NewLine"
mov r0, #0
mov r1, #1
mov r2, #2
mov r3, #3
mov r4, #4
mov r5, #5
mov r6, #6
mov r7, #7
mov r8, #8
mov r9, #9
mov r10,#10
mov r11,#11
mov r12,#12
mov r13,#13
mov pc, lr
.transient_end%
]

SYS "OS_File",10,filename%,&FFC,,transient%,transient_end%
fail%=FALSE
FOR P%=1 TO 10

FOR I%=regs% TO regs%+15*4
?I%=RND(255)
NEXT

regs%!0 = 4
regs%!4 = filename%
CALL test%

FOR I%=0 TO 14
J%=I%*4
IF regs%!J% <> regs2%!J% THEN PRINT "R";I%;" corrupted old = &";~regs%!J%;" new = &";~regs2%!J%:fail%=TRUE
NEXT

NEXT
IF fail% PRINT~!0
SYS "OS_File",6,filename%

