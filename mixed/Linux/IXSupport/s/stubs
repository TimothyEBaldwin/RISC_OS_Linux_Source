        AREA    |ASM|, CODE, READONLY

        IMPORT  FSEntry_Open
        IMPORT  FSEntry_GetBytes
        IMPORT  FSEntry_PutBytes
        IMPORT  FSEntry_Args
        IMPORT  FSEntry_Close
        IMPORT  FSEntry_File
        IMPORT  FSEntry_Func
        IMPORT  FSEntry_GBPB

fsinfo  DCD     title - base
        DCD     title - base
        DCD     FSEntry_Open      - base
        DCD     FSEntry_GetBytes1 - base
        DCD     FSEntry_PutBytes  - base
        DCD     FSEntry_Args      - base
        DCD     FSEntry_Close     - base
        DCD     FSEntry_File      - base
        DCB     70 ; Filing system number
        DCB     0  ; Max Files
        DCW     2_0001100000000000
        DCD     FSEntry_Func      - base
        DCD     FSEntry_GBPB      - base

        EXPORT  fsinfo

title
        DCB     "IXFS", 0
        ALIGN

FSEntry_GetBytes1
        PUSH    {lr}
        BL      FSEntry_GetBytes
        MOVS    lr, r0, lsl #1
        POP     {pc}
        END
