        GET     Hdr:ListOpts
        GET     Hdr:LowFSI

        AREA    |ASM|, CODE, READONLY

        IMPORT  FSEntry_Args
        IMPORT  FSEntry_Close
        IMPORT  FSEntry_File
        IMPORT  FSEntry_Func
        IMPORT  FSEntry_GBPB
        IMPORT  FSEntry_GetBytes
        IMPORT  FSEntry_Open
        IMPORT  FSEntry_PutBytes

fsinfo  DCD     title - base
        DCD     title - base
        DCD     FSEntry_Open      - base
        DCD     FSEntry_GetBytes1 - base
        DCD     FSEntry_PutBytes  - base
        DCD     FSEntry_Args      - base
        DCD     FSEntry_Close     - base
        DCD     FSEntry_File      - base
        DCD     fsinfo_flushnotify | fsinfo_extrainfo | 70 ; Filing system number
        DCD     FSEntry_Func      - base
        DCD     FSEntry_GBPB      - base
        DCD     fsextra_opencreate

        EXPORT  fsinfo

title
        DCB     "IXFS", 0
        ALIGN

FSEntry_GetBytes1
        STR     lr, [sp, #-4]!
        BL      FSEntry_GetBytes
        MOVS    lr, r0, lsl #1
        LDR     pc, [sp], #4

stdin_handler
        EXPORT  stdin_handler
        STMFD   sp!, {r0-r3, ip, lr}
        MOV     lr, pc
        MOV     pc, r12
        LDMFD   sp!, {r0-r3, ip, pc}
        END
