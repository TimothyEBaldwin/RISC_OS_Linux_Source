 ****************************************************************************/

/*-- template definition --*/

typedef struct
{
  char          *label;
  int           max_label_len;
  int           event;
} OptionButton;


#define OptionButton_GenerateUserStateChanged  0x00000001
#define OptionButton_On                        0x00000004


