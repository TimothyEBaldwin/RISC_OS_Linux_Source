#ifndef LOG_H
#define LOG_H

#include "handler.h"

//#define DEBUG

typedef struct {
	context_t context;
	uint32_t code[32];
	uint32_t domainid;
	uint32_t time;
	char command[256];
	char *detailed;
} logentry_t;

extern char log_file[256];

extern void log_add(const context_t *c);
extern void log_flush(void);
extern void log_new_application(void);

#endif
