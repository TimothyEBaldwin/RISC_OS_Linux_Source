#!/bin/bash
RISC_OS_Alias_IXFSBoot='Obey IXFS:$.dev.fd.6' exec ./sdl `uname -m | grep -q arm || echo qemu/arm-linux-user/qemu-arm` ./RISC_OS 8<. 6<< 'END' 7<< END > /dev/null

Dir IXFS:$.dev.fd.8
LoadModeFile AKF60
ChangeDynamicArea -ramfssize 128M
Set Wimp$ScrapDir RAM:$
Desktop -file IXFS:$.dev.fd.7
END

AddTinyDir IXFS:\$
AddTinyDir IXFS:\$$(echo $HOME | tr ./ /.)
AddTinyDir IXFS:\$.dev.fd.8
END
