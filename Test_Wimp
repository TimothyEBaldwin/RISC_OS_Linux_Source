# Save terminal state
trap "stty $(stty -g)" EXIT

make -j$(getconf _NPROCESSORS_ONLN) Built/sdl comma2attr Built/qemu_sandbox RISC_OS
. Built/qemu_sandbox

RISC_OS_Alias_IXFSBoot='ChangeDynamicArea -ramfssize 4M
Set Wimp$ScrapDir RAM:$
Desktop X AddTinyDir IXFS:$' Built/sdl bwrap --seccomp 9 9< <(Built/gen_seccomp) --unshare-all --proc /proc --dev /dev --dir /tmp --ro-bind RISC_OS /RISC_OS $QEMU_sandbox --file 8 /WARNING 8<<END $QEMU /RISC_OS --nvram /CMOS,ff2
This filesystem is volatile, all files will be
deleted at the end of the RISC OS Session.
END
